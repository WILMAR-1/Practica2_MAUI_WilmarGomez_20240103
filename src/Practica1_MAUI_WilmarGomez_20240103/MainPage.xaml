<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practica1_MAUI_WilmarGomez_20240103.MainPage"
             BackgroundColor="#FAF7F2"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <ScrollView>
            <VerticalStackLayout
                Padding="30,50,30,30"
                Spacing="0">

                <!-- Linea decorativa superior (ichi) -->
                <BoxView
                    HeightRequest="2"
                    Color="#2D2926"
                    WidthRequest="60"
                    HorizontalOptions="Center"
                    Margin="0,0,0,30" />

                <!-- Contenedor del bot con marco tipo shoji -->
                <Border
                    x:Name="BotContainer"
                    StrokeShape="RoundRectangle 4"
                    Stroke="#D4CFC6"
                    StrokeThickness="1"
                    BackgroundColor="#F5F0E8"
                    Padding="20"
                    HorizontalOptions="Center"
                    Margin="0,0,0,25">

                    <Image
                        x:Name="BotImage"
                        Source="dotnet_bot.png"
                        HeightRequest="140"
                        WidthRequest="140"
                        Aspect="AspectFit"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                </Border>

                <!-- Titulo principal -->
                <Label
                    x:Name="TitleLabel"
                    Text="Arquitectura MAUI"
                    FontSize="28"
                    FontFamily="NotoSerif"
                    FontAttributes="Bold"
                    TextColor="#2D2926"
                    HorizontalTextAlignment="Center"
                    Margin="0,0,0,5" />

                <!-- Subtitulo -->
                <Label
                    Text="Wilmar Gomez - 20240103"
                    FontSize="13"
                    TextColor="#8B7355"
                    HorizontalTextAlignment="Center"
                    Margin="0,0,0,5" />

                <Label
                    Text=".NET Multi-platform App UI"
                    FontSize="11"
                    TextColor="#B5AFA5"
                    HorizontalTextAlignment="Center"
                    Margin="0,0,0,20" />

                <!-- Separador tipo bamboo -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="15" Margin="0,0,0,25">
                    <BoxView HeightRequest="1" WidthRequest="40" Color="#D4CFC6" VerticalOptions="Center" />
                    <Label Text="/" FontSize="16" TextColor="#C8B88A" VerticalOptions="Center" />
                    <BoxView HeightRequest="1" WidthRequest="40" Color="#D4CFC6" VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!-- Seccion del juego con estilo washi -->
                <Border
                    x:Name="GameContainer"
                    StrokeShape="RoundRectangle 4"
                    Stroke="#D4CFC6"
                    StrokeThickness="1"
                    BackgroundColor="#FFFFFF"
                    Padding="20"
                    Margin="0,0,0,20">

                    <VerticalStackLayout Spacing="15">

                        <Label
                            Text="Desafio de Velocidad"
                            FontSize="18"
                            FontFamily="NotoSerif"
                            FontAttributes="Bold"
                            TextColor="#2D2926"
                            HorizontalTextAlignment="Center" />

                        <!-- Timer y Score -->
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                            <VerticalStackLayout>
                                <Label
                                    Text="TIEMPO"
                                    FontSize="9"
                                    TextColor="#B5AFA5"
                                    HorizontalTextAlignment="Center"
                                    CharacterSpacing="2" />
                                <Label
                                    x:Name="TimerLabel"
                                    Text="10s"
                                    FontSize="26"
                                    FontAttributes="Bold"
                                    TextColor="#8B4513"
                                    HorizontalTextAlignment="Center" />
                            </VerticalStackLayout>

                            <BoxView WidthRequest="1" Color="#E8E4DD" />

                            <VerticalStackLayout>
                                <Label
                                    Text="CLICKS"
                                    FontSize="9"
                                    TextColor="#B5AFA5"
                                    HorizontalTextAlignment="Center"
                                    CharacterSpacing="2" />
                                <Label
                                    x:Name="ScoreLabel"
                                    Text="0"
                                    FontSize="26"
                                    FontAttributes="Bold"
                                    TextColor="#2D2926"
                                    HorizontalTextAlignment="Center" />
                            </VerticalStackLayout>

                            <BoxView WidthRequest="1" Color="#E8E4DD" />

                            <VerticalStackLayout>
                                <Label
                                    Text="RECORD"
                                    FontSize="9"
                                    TextColor="#B5AFA5"
                                    HorizontalTextAlignment="Center"
                                    CharacterSpacing="2" />
                                <Label
                                    x:Name="HighScoreLabel"
                                    Text="0"
                                    FontSize="26"
                                    FontAttributes="Bold"
                                    TextColor="#7B8B6F"
                                    HorizontalTextAlignment="Center" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <!-- Boton del juego -->
                        <Button
                            x:Name="GameBtn"
                            Text="INICIAR JUEGO"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="#FAF7F2"
                            BackgroundColor="#2D2926"
                            CornerRadius="4"
                            HeightRequest="55"
                            Clicked="OnGameButtonClicked" />

                        <!-- Estado -->
                        <Label
                            x:Name="StatusLabel"
                            Text="Toca INICIAR para comenzar"
                            FontSize="11"
                            TextColor="#B5AFA5"
                            HorizontalTextAlignment="Center" />

                    </VerticalStackLayout>
                </Border>

                <!-- Boton de navegacion estilo torii -->
                <Border
                    StrokeShape="RoundRectangle 4"
                    Stroke="#C8A2A2"
                    StrokeThickness="1"
                    BackgroundColor="Transparent"
                    Padding="0"
                    Margin="0,0,0,20">

                    <Button
                        x:Name="btnDetalles"
                        Text="Ver Detalles de la Arquitectura"
                        FontSize="14"
                        TextColor="#8B7355"
                        BackgroundColor="Transparent"
                        BorderWidth="0"
                        HeightRequest="50"
                        Clicked="OnDetallesClicked"
                        HorizontalOptions="Fill" />
                </Border>

                <!-- Separador inferior -->
                <BoxView
                    HeightRequest="1"
                    Color="#E8E4DD"
                    Margin="40,0,40,10" />

                <!-- Footer -->
                <Label
                    Text="Practica 2 - Arquitectura .NET MAUI"
                    FontSize="10"
                    TextColor="#B5AFA5"
                    HorizontalTextAlignment="Center"
                    Margin="0,5,0,0" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
